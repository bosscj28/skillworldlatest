<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="#D7CCC8">

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">


            <TextView
                style="@style/TextViewKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text"
                android:layout_weight="0.8"
                android:singleLine="true"
                android:text="Lead Id "

                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_leadId"
                style="@style/TextViewDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text"
                android:layout_weight="0.5"
                android:singleLine="true"
                android:text="Lead Id:"

                android:textStyle="normal" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                style="@style/TextViewKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text"
                android:layout_weight="0.8"
                android:singleLine="true"
                android:text="@string/offername"

                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_offerName"
                style="@style/TextViewDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text"
                android:layout_weight="0.5"
                android:singleLine="true"
                android:text="Buyer Name"

                android:textStyle="normal" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                style="@style/TextViewKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text"
                android:layout_weight="0.8"
                android:singleLine="true"
                android:text="@string/customername"

                android:textStyle="normal" />


            <TextView
                android:id="@+id/customer_name"
                style="@style/TextViewDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text"
                android:layout_weight="0.5"
                android:singleLine="true"
                android:text="Plan to buy on"

                android:textStyle="normal" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                style="@style/TextViewKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text"
                android:layout_weight="0.8"
                android:singleLine="true"
                android:text="Lead Close Date "
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_leadCloseDate"
                style="@style/TextViewDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text"
                android:layout_weight="0.5"
                android:singleLine="true"
                android:text="Lead Close Date"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                style="@style/TextViewKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text"
                android:layout_weight="0.8"
                android:singleLine="true"
                android:text="Commission Amount"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_referrarAmount"
                style="@style/TextViewDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text"
                android:layout_weight="0.8"
                android:singleLine="true"
                android:text="Lead Close Date"
                android:textStyle="normal" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>